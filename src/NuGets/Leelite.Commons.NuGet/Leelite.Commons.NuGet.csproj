<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);CopyProjectReferencesToPackage</TargetsForTfmSpecificBuildOutput>
    <Version>0.1.0</Version>
    <PackageId>Leelite.Commons.NuGet</PackageId>
    <Authors>Leelite</Authors>
    <Product>Leelite</Product>
  </PropertyGroup>

  <Target Name="CopyProjectReferencesToPackage" DependsOnTargets="ResolveReferences">
    <ItemGroup>
      <BuildOutputInPackage Include="@(ReferenceCopyLocalPaths-&gt;WithMetadataValue('ReferenceSourceTarget', 'ProjectReference'))" />
    </ItemGroup>
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Aspects\Leelite.Commons.Aspects.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Assembly\Leelite.Commons.Assembly.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Convention\Leelite.Commons.Convention.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Helpers\Leelite.Commons.Helpers.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Host\Leelite.Commons.Host.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Lifetime\Leelite.Commons.Lifetime.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Mapper\Leelite.Commons.Mapper.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons.Validation\Leelite.Commons.Validation.csproj" />
    <ProjectReference Include="..\..\Commons\Leelite.Commons\Leelite.Commons.csproj">
      <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
  </ItemGroup>

</Project>
