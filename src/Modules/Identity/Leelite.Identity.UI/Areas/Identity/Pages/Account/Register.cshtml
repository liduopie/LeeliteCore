@page
@model RegisterModel
@{
    ViewData["Title"] = "注册";
}

<!-- Registration form -->
<dev class="login-form" action="index.html">
    <div class="card mb-0">
        <div class="card-body">
            <div class="text-center mb-3">
                <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                    <img src="~/global_assets/images/logo_icon.svg" class="h-48px" alt="">
                </div>
                <h5 class="mb-0">注册帐号</h5>
                <span class="d-block text-muted">所有字段必填</span>
            </div>

            <div class="text-center text-muted content-divider mb-3">
                <span class="px-2">账号/邮箱</span>
            </div>

            <form asp-route-returnUrl="@Model.ReturnUrl" class="mb-3" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-invalid-label"></div>

                <div class="mb-3">
                    <label class="form-label">账号/邮箱</label>
                    <div class="form-control-feedback form-control-feedback-start">
                        <input asp-for="Input.UserName" class="form-control" placeholder="账号/邮箱" />
                        <div class="form-control-feedback-icon">
                            <i class="ph-user-circle text-muted"></i>
                        </div>
                    </div>
                    <span asp-validation-for="Input.UserName" class="validation-invalid-label"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">密码</label>
                    <div class="form-control-feedback form-control-feedback-start">
                        <input asp-for="Input.Password" class="form-control" placeholder="•••••••••••" />
                        <div class="form-control-feedback-icon">
                            <i class="ph-lock text-muted"></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="validation-invalid-label"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">确认密码</label>
                    <div class="form-control-feedback form-control-feedback-start">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="•••••••••••" />
                        <div class="form-control-feedback-icon">
                            <i class="ph-lock text-muted"></i>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="validation-invalid-label"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">邮箱</label>
                    <div class="form-control-feedback form-control-feedback-start">
                        <input asp-for="Input.Email" class="form-control" placeholder="john@doe.com" />
                        <div class="form-control-feedback-icon">
                            <i class="ph-at text-muted"></i>
                        </div>
                        <span asp-validation-for="Input.Email" class="validation-invalid-label"></span>
                    </div>
                </div>

                <div class="text-center text-muted content-divider mb-3">
                    <span class="px-2">附件</span>
                </div>

                <div class="mb-3">
                    <label class="form-check mb-2">
                        <input type="checkbox" name="remember" class="form-check-input" checked>
                        <span class="form-check-label">Send me <a href="#">&nbsp;test account settings</a></span>
                    </label>

                    <label class="form-check mb-2">
                        <input type="checkbox" name="remember" class="form-check-input" checked>
                        <span class="form-check-label">Subscribe to monthly newsletter</span>
                    </label>

                    <label class="form-check">
                        <input type="checkbox" name="remember" class="form-check-input">
                        <span class="form-check-label">同意 <a href="#">服务条款</a></span>
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-teal w-100">注册</button>
                </div>
            </form>
            <vc:external-logins></vc:external-logins>
        </div>
    </div>
</dev>
<!-- /registration form -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
